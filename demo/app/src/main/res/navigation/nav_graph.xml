<?xml version="1.0" encoding="utf-8"?>
<navigation android:id="@+id/nav_graph"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.sberdevices.pub.demoapp.ui.main.MainFragment"
        android:label="Main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_smartappFragment"
            app:destination="@id/smartappFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_mainFragment_to_assistantFragment"
            app:destination="@id/assistantFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/smartappFragment"
        android:name="ru.sberdevices.pub.demoapp.ui.smartapp.SmartAppFragment"
        android:label="SmartApp"
        tools:layout="@layout/fragment_smartapp" />

    <fragment
        android:id="@+id/assistantFragment"
        android:name="ru.sberdevices.pub.demoapp.ui.assistant.AssistantFragment"
        android:label="Assistat"
        tools:layout="@layout/fragment_assistant" />

</navigation>
