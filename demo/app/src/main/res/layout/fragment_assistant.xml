<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/shadeHideButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shade_hide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shadeModeTextView" />

    <Button
        android:id="@+id/shadeShowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shade_show"
        app:layout_constraintStart_toEndOf="@+id/shadeHideButton"
        app:layout_constraintTop_toBottomOf="@+id/shadeModeTextView" />

    <TextView
        android:id="@+id/shadeModeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StarOS позволяет скрывать секцию с ассистентом.\nСкрыть ассистента можно с помощью window.enterImmersiveMode()\nПоказать можно с помощью window.exitImmersiveMode()"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shadeModeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shadeModeDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
